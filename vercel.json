{
  "framework": "nextjs",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30,
      "memory": 1024
    },
    "pages/api/**/*.ts": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "regions": ["iad1"],
  "crons": [
    {
      "path": "/api/health",
      "schedule": "0 */6 * * *"
    }
  ],
  "build": {
    "env": {
      "SKIP_ENV_VALIDATION": "true"
    }
  }
}